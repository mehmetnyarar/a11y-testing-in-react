{
  "name": "a11y-testing-in-react",
  "description": "Ways to test accessibility in React applications.",
  "keywords": [
    "accessibility",
    "a11y",
    "react"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}\"",
    "lint": "eslint  \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint  \"**/*.{js,jsx,ts,tsx}\" --fix",
    "type-check": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "test": "echo \"test\"",
    "precm": "npm-run-all format:fix lint:fix type-check test",
    "cm": "cz"
  },
  "dependencies": {
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "17.0.18",
    "@types/react": "17.0.39",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}": "prettier --write",
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add .",
      "bash -c 'yarn type-check'"
    ]
  }
}
