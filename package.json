{
  "name": "a11y-testing-in-react",
  "description": "Ways to test accessibility in React applications.",
  "keywords": [
    "accessibility",
    "a11y",
    "react"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}\"",
    "lint": "eslint  \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint  \"**/*.{js,jsx,ts,tsx}\" --fix",
    "type-check": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "test:unit": "jest",
    "test": "echo \"test\"",
    "precm": "npm-run-all format:fix lint:fix type-check test",
    "cm": "cz"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sanitize.css": "^13.0.0",
    "sass": "^1.49.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^27.4.0",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "17.0.18",
    "@types/react": "17.0.39",
    "@types/react-dom": "^17.0.11",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "husky": ">=6",
    "jest": "^27.5.1",
    "jest-axe": "^5.0.1",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,scss,md,json,yml}": "prettier --write",
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add .",
      "bash -c 'yarn type-check'"
    ]
  }
}
